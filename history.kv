MDScreen:
    taskList: taskList
    name: 'history'
    MDFloatLayout:
        md_bg_color: 0,0,0,1
        MDLabel:
            text: 'History'
            pos_hint: {"center_x": .7, "center_y": .93}
            font_size: '35sp'
            theme_text_color: "Custom"
            text_color: 0 / 255, 255 / 255, 0 / 255, 1

        Buttons:
            text: 'X'
            pos_hint: {"center_x": .5, "center_y": .06}
            on_release:
                root.manager. transition.direction = 'left'
                root.manager.current = 'main'
                app.clear()

        MDFloatLayout:
            size_hint: .95, .75
            pos_hint: {"center_x": .5, "center_y": .48}
            canvas:
                Color:
                    rgba: (200/255, 200/255, 200/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]

            ScrollView:
                do_scroll_y: True
                do_scroll_x: False
                size_hint_y: .9
                pos_hint: {"center_x": .5, "y": 0.1}
                bar_width: 0
                GridLayout:
                    id: taskList
                    cols: 1
                    height: self.minimum_height
                    row_default_height: 70
                    size_hint_y: None
                    padding: 15, 10
                    spacing: 15, 20


<Buttons@MDFillRoundFlatButton>
    user_font_size: '15sp'
    md_bg_color: 0/255, 143/255, 17/255, 1
    theme_text_color: 'Custom'
    text_color: 0,0,0,1