MDScreen:
    taskList: taskList
    name: 'main'
    MDLabel:
        text: 'Harakiri'
        pos_hint: {"center_x": .8, "center_y": .97}
        font_size: '35sp'
        theme_text_color: "Custom"
        text_color: 0 / 255, 0 / 255, 255 / 255, 1
    MDFloatLayout:
        size_hint: .95, .85
        pos_hint: {"center_x": .5, "center_y": .52}
        canvas:
            Color:
                rgba: (200/255, 200/255, 200/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]

        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .75
            pos_hint: {"center_x": .5, "y": 0.1}
            bar_width: 0
            GridLayout:
                id: taskList
                cols: 1
                height: self.minimum_height
                row_default_height: 70
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20

    Buttons:
        text: 'Test'
        pos_hint: {"center_x": .5, "center_y": .06}
        size_hint: .2, .05
#        font_size: '30sp'
        on_release:
            app.createTask()

    Buttons:
        text: 'Create'
        pos_hint: {"center_x": .85, "center_y": .06}
        on_release:
            app.show_task_dialog()


    Buttons:
        text: 'History'
        pos_hint: {"center_x": .15, "center_y": .06}
        on_release:
            root.manager. transition.direction = 'right'
            root.manager.current = 'history'

<DialogContent>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint: 1, None
    height: "300dp"

    MDFloatLayout:
        canvas:
            Color:
                rgba: (0/255, 200/255, 200/255, 1)
        MDTextField:
            id: name
            hint_text: "Name... "
            size_hint_x: .85
            pos_hint: {"center_x": .43, "center_y": .7}
            max_text_length: 50
#            on_text_validate: (app.add_task(task_text, date_text.text), app.close_dialog())

        MDFloatLayout:
            size_hint_y: .9
            pos_hint: {"center_x": .5, "center_y": .01}
            canvas:
                Color:
                    rgb: (200/255, 200/255, 200/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: comment
                hint_text: 'Comment...'
                size_hint: 1, None
                max_text_length: 200
                pos_hint: {"center_x": .5, "center_y": .5}
                height: 240
                cursor_color: 75/255, 0/255, 130/255, 1
                text_color: 75/255, 0/255, 130/255, 1
                background_color: 0, 0, 0, 0
                multiline: True
#                on_text_validate: (app.add_task(task_text, date_text.text), app.close_dialog())
        MDLabel:
#                spacing: '10dp'
            pos_hint: {"center_x": .51, "center_y": .95}
            id: date_end


        MDIconButton:
            icon: 'calendar'
            pos_hint: {"center_x": .95, "center_y": .7}
            on_release: root.show_date_picker()
            padding: '10dp'



    BoxLayout:
        orientation: 'horizontal'

        MDFillRoundFlatButton:
            text: "SAVE"
            on_release: (app.add_to_db(name.text, comment.text, date_end.text), app.close_dialog())
        Widget:
        MDRoundFlatButton:
            text: 'CANCEL'
            on_release: app.close_dialog()

<ListOfTasks>
    id: AddIngredient
    elevation: 20
    md_bg_color: 1,1,1,1
    radius: [8]
#    name: name
#    comment: comment
    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {"center_x": .02, "center_y": .5}
        md_bg_color: 75/255, 0/255, 130/255, 1
    MDLabel:
        id: name
        text: root.name
#        text: str(root.name)
#            markup: True
#        md_bg_color: 75/255, 0/255, 130/255, 1
        font_size: '20sp'
        size_hint_x: .8
#        theme_text_color: "Custom"
#        text_color: 1, 1, 1, 1
#        font_name: 'KaushanScript-Regular.ttf'
        pos_hint: {"center_x": .46, "center_y": .5}

    MDLabel:
        id: comment
        text: root.comment
#        text: root.comment
        markup: True
        size_hint_x: .9
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 0
        font_name: 'KaushanScript-Regular.ttf'
        pos_hint: {"center_x": .46, "center_y": .6}

    MDLabel:
        id: date_end
        text: root.date_end
#        text: root.comment
        markup: True
        size_hint_x: .9
#        theme_text_color: "Custom"
#        text_color: 1, 1, 1, 0
#        font_name: 'KaushanScript-Regular.ttf'
        pos_hint: {"center_x": .86, "center_y": .5}

    MDIconButton:
        icon: 'comment-text-outline'
        pos_hint: {"center_x": .95, "center_y": .5}
        theme_text_color: 'Custom'
        text_color: (75/255, 0/255, 130/255, .1) if comment.text =='' else (255/255, 255/255, 255/255, 1)
        on_release: app.show_comment(comment.text)

<Buttons@MDFillRoundFlatButton>
    user_font_size: '15sp'
    md_bg_color: 75/255, 0/255, 130/255, .5
    theme_text_color: 'Custom'
    text_color: 1,1,1,1