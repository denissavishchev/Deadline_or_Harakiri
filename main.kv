
<CreateTask>:
    id: createTask
    name: 'createTask'
    elevation: 20
    md_bg_color: 1,1,1,1
    radius: [20]
    orientation: "vertical"

    MDFloatLayout:
        md_bg_color: 1,0,0,1
        id: bar
        radius: [20]
        size_hint: .95, .9
        pos_hint: {"center_x": .5, "center_y": .5}
        md_bg_color: 75/255, 0/255, 130/255, .9
    MDLabel:
        id: Diameter
        text: 'Hello'
        markup: True
        font_size: '15sp'
        size_hint_x: .5
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {"center_x": .5, "center_y": .5}

MDScreen:
    taskList: taskList
    name: 'main'
    MDLabel:
        text: 'Harakiri'
        pos_hint: {"center_x": .8, "center_y": .97}
        font_size: '35sp'
        theme_text_color: "Custom"
        text_color: 0 / 255, 0 / 255, 255 / 255, 1
    MDFloatLayout:
        size_hint: .95, .85
        pos_hint: {"center_x": .5, "center_y": .52}
        canvas:
            Color:
                rgba: (200/255, 200/255, 200/255, 1)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]

        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .75
            pos_hint: {"center_x": .5, "y": 0.1}
            bar_width: 0
            GridLayout:
                id: taskList
                cols: 1
                height: self.minimum_height
                row_default_height: 70
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 20

    Buttons:
        text: 'Test'
        pos_hint: {"center_x": .5, "center_y": .06}
        size_hint: .2, .05
#        font_size: '30sp'
        on_release:
            app.createTask()

    Buttons:
        text: 'Create'
        pos_hint: {"center_x": .85, "center_y": .06}
        on_release:
            root.manager. transition.direction = 'left'
            root.manager.current = 'createTask'

    Buttons:
        text: 'History'
        pos_hint: {"center_x": .15, "center_y": .06}
        on_release:
            root.manager. transition.direction = 'right'
            root.manager.current = 'history'


<Buttons@MDFillRoundFlatButton>
    user_font_size: '15sp'
    md_bg_color: 75/255, 0/255, 130/255, .5
    theme_text_color: 'Custom'
    text_color: 1,1,1,1